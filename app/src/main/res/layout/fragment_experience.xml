<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".model.ExperienceFragment">

    <!-- 经验输入框 -->
    <EditText
        android:id="@+id/experienceInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="分享您的考研经验..."
        android:inputType="textMultiLine"
        android:minHeight="120dp"
        android:textColorHint="@color/design_default_color_secondary_variant" />

    <!-- 操作按钮行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/addImageBtn"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:text="添加图片"
            android:textColor="?attr/colorPrimary" />

        <Button
            android:id="@+id/submitBtn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:text="发布"
            android:backgroundTint="?attr/colorPrimary" />
    </LinearLayout>

    <!-- 图片预览 -->
    <ImageView
        android:id="@+id/imagePreview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:visibility="gone"
        tools:visibility="visible"
        tools:src="@tools:sample/backgrounds/scenic" />

    <!-- 经验列表 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/experienceRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        tools:listitem="@layout/item_experience" />

</LinearLayout>